generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RegisteredVoter {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String
  lastName String
  street String
  postalCode String
  city String

  hasRegistred Boolean

  @@map("resgisteredVoters")
}

model Voters {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userName String @unique
  hash String

  publicKey String
  privateKey String

  @@map("voters")
}

