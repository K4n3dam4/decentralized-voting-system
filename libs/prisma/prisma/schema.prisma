generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  firstName String
  lastName String
  employeeNumber Int @unique

  @@map("admins")
}

model RegisteredVoter {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  socialSecurity Int @unique
  firstName String
  lastName String
  street String
  postalCode Int
  city String

  hasRegistered Boolean

  @@map("resgisteredVoters")
}

model Voter {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String @unique
  hash String

  publicKey String
  privateKey String

  @@map("voters")
}

