// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
      provider = "prisma-client-js"
}

datasource db {
      provider = "postgresql"
      url      = env("DATABASE_URL")
}

enum Role {
  VOTER
  ADMIN
}

model User {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    role Role @default(VOTER)

    ssn String? @unique
    firstName String
    lastName String
    street String
    postalCode Int
    city String

    serviceNumber Int? @unique
    elections Election[]

    email String @unique
    hash String

    @@map("users")
}

model Election {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    adminId Int
    admin User @relation(fields: [adminId], references: [id])

    name String
    candidates String[]
    contract String
    eligibleVoters String[]
    expires DateTime

    @@map("elections")
}

